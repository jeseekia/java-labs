import java.util.Scanner;

/**
 * 
 */

/**
 * @author Jeseekia
 *
 */
public class Batting {

	/**
	 * @param args
	 */
	public static void main(String[] args) {

		int userNumBatters;
		int userAtBat;
		int userNumBases;
		int i;
		int j;
		Scanner input = new Scanner(System.in);
		
		System.out.println("Enter the number of batters");
		userNumBatters = input.nextInt();
		
		for(i=0; i<userNumBatters; i++) {
			System.out.println("Enter the number of times at bat for Batter #" + i+1);
			userAtBat = input.nextInt();
			
			for(j=0; j<userAtBat; j++) {
				System.out.println("Enter the number of bases "+ j+1 + "/" + userAtBat);
				userNumBases = input.nextInt();
				
				
			}
			
			
		}
		
	}

}
